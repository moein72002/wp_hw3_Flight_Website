COPY frontend/pages/buy-ticket/*.css /usr/share/nginx/html/pages/buy-ticket/
COPY frontend/pages/buy-ticket/*.js /usr/share/nginx/html/pages/buy-ticket/
COPY frontend/pages/login/*.html /usr/share/nginx/html/pages/login/
COPY frontend/pages/login/*.css /usr/share/nginx/html/pages/login/
COPY frontend/pages/login/*.js /usr/share/nginx/html/pages/login/
COPY frontend/pages/profile/*.html /usr/share/nginx/html/pages/profile/
COPY frontend/pages/profile/*.css /usr/share/nginx/html/pages/profile/
COPY frontend/pages/profile/*.js /usr/share/nginx/html/pages/profile/
COPY frontend/pages/register/*.html /usr/share/nginx/html/pages/register/
COPY frontend/pages/register/*.css /usr/share/nginx/html/pages/register/
COPY frontend/pages/register/*.js /usr/share/nginx/html/pages/register/
COPY frontend/pages/ticket-list/*.html /usr/share/nginx/html/pages/ticket-list/
